{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "variables": {
    "fallbackUrl": "https://transactcampus.com/",
    "hostingPlanName": "ASP-Prod-US-West-URL-Web",
    "shortenerUrl": "app-prod-us-west-url-web.azurewebsites.net')]",
    "siteName": "APP-Prod-US-West-URL-Web-B3",
    "sourceCodeBranch": "master",
    "sourceCodeRepositoryURL": "https://github.com/KingSpi/serverless-url-shortener",
    "storageAccountId": "[concat(resourceGroup('RG-Prod-US-West-URL-B3').id,'/providers/','Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
    "storageAccountName": "saproduswesturlservice",
    "storageAccountType": "Standard_LRS",
    "utmSource": "transact"
  },
  "resources": [
    {
      "type": "microsoft.insights/components",
      "apiVersion": "2015-05-01",
      "name": "[variables('siteName')]",
      "location": "West US",
      "tags": {
        "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', variables('siteName'))]": "Resource"
      },
      "properties": {
        "ApplicationId": "[variables('siteName')]",
        "Request_Source": "IbizaWebAppExtensionCreate"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2016-01-01",
      "location": "West US",
      "kind": "Storage",
      "sku": {
        "name": "[parameters('storageAccountType')]"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2016-09-01",
      "name": "[variables('hostingPlanName')]",
      "location": "West US",
      "sku": {
        "name": "Y1",
        "tier": "Dynamic",
        "size": "Y1",
        "family": "Y",
        "capacity": 0
      },
      "properties": {
        "name": "[variables('hostingPlanName')]",
        "computeMode": "Dynamic"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2016-08-01",
      "name": "[variables('siteName')]",
      "location": "West US",
      "kind": "functionapp",
      "properties": {
        "name": "[variables('siteName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "clientAffinityEnabled": false
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('microsoft.insights/components/', variables('siteName'))]"
      ],
      "resources": [
        {
          "type": "config",
          "name": "appsettings",
          "apiVersion": "2015-08-01",
          "properties": {
            "Project": "functionApp",
            "AzureWebJobsDashboard": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountId'),'2015-05-01-preview').key1)]",
            "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountId'),'2015-05-01-preview').key1)]",
            "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(variables('storageAccountId'),'2015-05-01-preview').key1)]",
            "WEBSITE_CONTENTSHARE": "[toLower(variables('siteName'))]",
            "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('microsoft.insights/components/', variables('siteName')), '2015-05-01').InstrumentationKey]",
            "SHORTENER_URL": "[toLower(variables('shortenerUrl'))]",
            "UTM_SOURCE": "[toLower(variables('utmSource'))]",
            "FALLBACK_URL": "[toLower(variables('fallbackUrl'))]",
            "FUNCTIONS_EXTENSION_VERSION": "~1",
            "WEBSITE_NODE_DEFAULT_VERSION": "6.5.0",
            "ROUTING_EXTENSION_VERSION": "~0.2"
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('siteName'))]",
            "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
          ]
        },
        {
          "type": "sourcecontrols",
          "apiVersion": "2015-08-01",
          "name": "web",
          "properties": {
            "RepoUrl": "[variables('sourceCodeRepositoryURL')]",
            "branch": "[variables('sourceCodeBranch')]",
            "IsManualIntegration": "true"
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites/', variables('siteName'))]",
            "[resourceId('Microsoft.Web/Sites/config', variables('siteName'), 'appsettings')]"
          ]
        }
      ]
    }
  ]
}

